<h1>Books</h1>
<div class="text">
  <div class="title_box">Title
    <div class="title_list">
     <% @books.each do |book| %>
        <p><%= book.title %></p>
      <% end %>
    </div>
  </div>
  <div class="book_box">Body
    <div class="books_list">
     <% @books.each do |book| %>
       <p><%= book.body %></p>
     <% end %>
    </div>
  </div>
  <div class="link">
    <% @books.each do |book| %>
      <p class="show"><%= link_to 'Show',home_path %></p>
      <p class="edit"><%= link_to 'Edit',new_home_path %></p>
      <p class="destroy"><%= link_to 'Destroy',homes_path %></p>
    <% end %>
  </div>
</div>

<h2>New Book</h2>

<%= form_with model:@book url: homes_path, local:true do |f| %>

  <h4>Title</h4>
  
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  
  <%= f.text_area :body %>
  
  <%= f.submit "Creat Book" %>
  
<% end %>

